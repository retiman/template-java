{
	"name": "Java",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"GRADLE_VERSION": "7.4.2",
			"INSTALL_MAVEN": "false",
			"INSTALL_GRADLE": "true",
			"NODE_VERSION": "none",
			"VARIANT": "17-buster"
		}
	},
	"settings": {
		"java.jdt.ls.home": "/docker-java-home"
	},
	"extensions": [
		"vscjava.vscode-java-pack"
	],
	"postCreateCommand": "java -version",
	"remoteUser": "vscode"
}
